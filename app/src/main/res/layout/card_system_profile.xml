<androidx.cardview.widget.CardView
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/blue"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/btn_akun_saya"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/baseline_person_24"
                    android:id="@+id/icon_person"
                    android:contentDescription="@string/todo" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/akun_saya"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/white"/>

                        <ImageView
                            android:id="@+id/btn_akunsaya"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_right"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>

            </LinearLayout>



            <View
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginStart="60dp"/>

            <LinearLayout
                android:id="@+id/notifikasi"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/baseline_notifications_24"
                    android:id="@+id/notifikasi_"
                    app:tint="@color/white" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/notifikasi"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/btn_notifikasie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_right"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>



            </LinearLayout>


            <View
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="60dp"/>


            <LinearLayout
                android:id="@+id/language"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/baseline_library_books_24"
                    android:id="@+id/icon_Keamanan"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ganti_bahasa"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/btn_cange_language"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_right" />
                    </LinearLayout>



            </LinearLayout>

            <View
                android:background="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginLeft="60dp"/>


            <LinearLayout
                android:id="@+id/ketentuan_privasi"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="start"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/icon_privasi"
                    android:id="@+id/icon_privasi"
                    android:contentDescription="@string/todo" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/ketentuan_dan_privasi"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textColor="@color/white" />

                        <ImageView
                            android:id="@+id/btn_ketentuanprivasi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_right"
                            android:contentDescription="@string/todo" />
                    </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

